{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ],
    "tailwindCSS.classFunctions": ["clsx", "cva", "cn"]
}
